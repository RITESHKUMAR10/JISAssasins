class Power:
    def __init__(self):
        self.x=int(input("enter the base number:"))
        self.y=int(input("enter the first power number:"))
        self.z=int(input("enter the second power number:"))

    def calPower(self):
        self.x=(self.x**self.y)*(self.x**self.z)

    def printPower(self):
        print("The result is:",self.x)

power=Power()
power.calPower()
power.printPower()


